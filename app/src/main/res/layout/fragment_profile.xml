<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint"
    tools:context=".menu.MenuActivity">

    <!-- Círculos decorativos del fondo -->
    <View
        android:id="@+id/holder_register3"
        android:layout_width="416dp"
        android:layout_height="626dp"
        android:background="@drawable/login_rectangle_shape"
        android:backgroundTint="@color/light_green"
        android:layout_marginTop="142dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/deco_circle_main"
        android:layout_width="681dp"
        android:layout_height="220dp"
        android:layout_marginStart="-135dp"
        android:layout_marginTop="-85dp"
        android:background="@drawable/login_circle_shape"
        android:backgroundTint="@color/light_fancy_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/another_deco_circle_main"
        android:layout_width="631dp"
        android:layout_height="225dp"
        android:layout_marginStart="-37dp"
        android:layout_marginTop="-97dp"
        android:background="@drawable/login_circle_shape"
        android:backgroundTint="@color/fancy_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenido Principal centrado verticalmente -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.5">

        <TextView
            android:id="@+id/textViewPerfil"
            android:layout_width="368dp"
            android:layout_height="136dp"
            android:gravity="center"
            android:text="Perfil"
            android:textColor="#FFEB3B"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="23dp" />

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/generic_company"
            android:layout_gravity="center"
            android:contentDescription="Imagen de Perfil"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:paddingBottom="16dp"
            android:text="Compañía Con Nombre Genérico"
            android:textColor="@color/brown"
            android:textColorHint="#00FFFFFF"
            android:textStyle="bold" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/user_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/user_icon"
                android:drawablePadding="10dp"
                app:backgroundTint="@color/light_green"
                android:padding="10dp"
                android:text="Perfil"
                android:textColor="#333333"
                android:textColorHighlight="#673AB7" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manejo De Contraseñas"
                android:drawableStart="@drawable/password_icon"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ajustes"
                android:drawableStart="@drawable/settings_icon"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cerrar Sesión"
                android:drawableStart="@drawable/exit_icon"
                android:drawablePadding="10dp"
                android:padding="10dp"
                android:textColor="#C70000" />
        </LinearLayout>
    </LinearLayout>

    <!-- Contenedor para reemplazar fragmentos -->
    <FrameLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_constraintBottom_toTopOf="@id/navigation_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Navegación inferior -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>
