<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint"> <!-- Fondo color menta -->

    <!-- Decoraciones Circulares -->


    <View
        android:id="@+id/holder_register2"
        android:layout_width="416dp"
        android:layout_height="626dp"
        android:background="@drawable/login_rectangle_shape"
        android:backgroundTint="@color/light_green"
        android:layout_marginTop="142dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <View
        android:id="@+id/deco_circle_main"
        android:layout_width="681dp"
        android:layout_height="220dp"
        android:layout_marginStart="-135dp"
        android:layout_marginTop="-85dp"
        android:background="@drawable/login_circle_shape"
        android:backgroundTint="@color/light_fancy_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenido Principal -->

    <!-- Footer - Bottom Navigation -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@id/navigation_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"> <!-- Centrado vertical con bias -->

        <TextView
            android:id="@+id/textView9"
            android:layout_width="378dp"
            android:layout_height="131dp"
            android:gravity="center"
            android:text="Vista de Perfil"
            android:textColor="#FFEB3B"
            android:textSize="35sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Imagen de Perfil:"
            android:textColor="#702D00"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivProfileImage"
            android:layout_width="100dp"
            android:layout_height="136dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="Imagen de Perfil"
            android:src="@drawable/generic_company" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Nombre de Compañía:"
            android:textColor="#702D00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvCompanyName"
            android:layout_width="match_parent"
            android:paddingTop="12dp"
            android:layout_height="wrap_content"
            android:text="Compañía con Nombre Genérico"
            android:textColor="#333333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="26dp"
            android:text="Correo Electrónico:"
            android:textColor="#702D00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:text="companiagenerica@gmail.com"
            android:textColor="#333333" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="26dp"
            android:text="RUC de Compañía:"
            android:textColor="#702D00"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvRUC"
            android:layout_width="match_parent"
            android:paddingTop="12dp"
            android:layout_height="wrap_content"
            android:text="20123456780"
            android:textColor="#333333" />

        <ImageView
            android:id="@+id/edit_profile_option"
            android:layout_width="82dp"
            android:layout_height="78dp"
            android:paddingTop="26dp"
            android:scaleType="centerInside"
            android:src="@drawable/edit_icon" />


    </LinearLayout>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_nav_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
