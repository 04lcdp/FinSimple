<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mint">

    <!-- Decoraciones Circulares -->

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/navigation_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent">

    </FrameLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/frameLayout"
        app:menu="@menu/bottom_nav_menu" />

    <View
        android:id="@+id/holder_register4"
        android:layout_width="416dp"
        android:layout_height="626dp"
        android:background="@drawable/login_rectangle_shape"
        android:backgroundTint="@color/light_green"
        android:layout_marginTop="142dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/deco_circle_main"
        android:layout_width="681dp"
        android:layout_height="220dp"
        android:layout_marginStart="-135dp"
        android:layout_marginTop="-85dp"
        android:background="@drawable/login_circle_shape"
        android:backgroundTint="@color/light_fancy_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/another_deco_circle_main"
        android:layout_width="631dp"
        android:layout_height="225dp"
        android:layout_marginStart="-37dp"
        android:layout_marginTop="-97dp"
        android:background="@drawable/login_circle_shape"
        android:backgroundTint="@color/fancy_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Contenido Principal -->
    <LinearLayout
        android:layout_width="415dp"
        android:layout_height="651dp"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="6dp">


        <TextView
            android:id="@+id/textView9"
            android:layout_width="378dp"
            android:layout_height="88dp"
            android:gravity="center"
            android:text="Edición de Perfil"
            android:textColor="#FFEB3B"
            android:textSize="35sp"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="23dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp"
            android:text="Revise Los Datos Ingresados Y Seleccione Aquellos Datos Que Necesita Actualizar"
            android:textColor="#595959"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/ivEditProfileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:contentDescription="Imagen de Perfil"
            android:src="@drawable/generic_company" />

        <EditText
            android:id="@+id/etCompanyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Editar Nombre de Compañía"
            android:padding="10dp"
            android:text="Compañía con Nombre Genérico" />

        <EditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Editar Correo Electrónico"
            android:padding="10dp"
            android:text="companiagenerica@gmail.com" />

        <EditText
            android:id="@+id/etRUC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Editar RUC de Compañía"
            android:padding="10dp"
            android:text="20123456780" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#34A853"
            android:paddingVertical="10dp"
            android:text="Guardar"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btnBack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="#EA4335"
            android:paddingVertical="10dp"
            android:text="Retroceder"
            android:textColor="#FFFFFF" />

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
